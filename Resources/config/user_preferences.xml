<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="merk_notification.user_preferences.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%merk_notification.user_preferences.form.type%</argument>
            <argument>%merk_notification.user_preferences.form.name%</argument>
        </service>

        <service id="merk_notification.user_preferences.form.type" class="merk\NotificationBundle\Form\Type\UserPreferencesType">
            <tag name="form.type" alias="merk_notification_user_preferences" />
            <argument>%merk_notification.model.user_preferences.class%</argument>
            <argument type="service" id="merk_notification.user_notifier" />
        </service>

        <service id="merk_notification.user_preferences.form.handler.default" class="merk\NotificationBundle\Form\Handler\UserPreferencesHandler" scope="request" public="false">
            <argument type="service" id="merk_notification.user_preferences.form" />
            <argument type="service" id="request" />
            <argument type="service" id="merk_notification.user_preferences.manager" />
            <argument type="service" id="security.context" />
        </service>
    </services>

</container>

